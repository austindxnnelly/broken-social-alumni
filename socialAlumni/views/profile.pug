extends layout 

block content 
    header(class="p-3 text-bg-dark d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4 border-bottom")
        div(class="container")
            include nav 
    p 
    div(class='row-profile')
        legend Profile Settings
        div(class='column-profile')
           form(class="form-profile", method='get')
                fieldset 
                    label(for="profilePictures") Profile Picture 
                    br
                    img(src=`/profilePictures/${profilePictures}`, alt="Profile pictures" height="500" width="500")
        div(class='column-profile')
            form(class="form-profile", method='get')
                fieldset 
                    label(for="userFirstName") First Name 
                    div
                    label(for="firstName")  #{firstname}
                    p
                    div
                    label(for="userSurname") Surname 
                    div 
                    label(for="lastName")  #{lastname}
                    div
                    p 
                    label(for="userEmail") Email 
                    div
                    label #{email}
        div(class='column-profile')
            form(class="form-profile", method='get')
                fieldset
                    label(for="userStatus") Years Active 
                    div
                    input(type="status" id="userStatus" name="userStatus", class="form-control")
                    div
                    label(for="fieldOfStudy") Field of Study 
                    div
                    input(type="field" id="fieldOfStudy" name="fieldOfStudy", class="form-control")
                    div
                    input(type="submit", value="Save")
